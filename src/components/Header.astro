---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import presetIcons from "@unocss/preset-icons";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links center">
      <HeaderLink href="/about">about</HeaderLink>
      <HeaderLink href="/projects">projects</HeaderLink>
      <HeaderLink href="/writing">writing</HeaderLink>
    </div>

    <div class="social-links-container">
      <a href="https://github.com/quinniscoding" target="_blank">
        <span class="sr-only">Go to Quinn Huang's GitHub repo</span>
        <svg
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24">
          <path
            fill="currentColor"
            fill-opacity="0"
            d="M15 4.5c-0.39 -0.1 -1.33 -0.5 -3 -0.5c-1.67 0 -2.61 0.4 -3 0.5c-0.53 -0.43 -1.94 -1.5 -3.5 -1.5c-0.34 1 -0.29 2.22 0 3c-0.75 1 -1 2 -1 3.5c0 2.19 0.48 3.58 1.5 4.5c1.02 0.92 2.11 1.37 3.5 1.5c-0.65 0.54 -0.5 1.87 -0.5 2.5v4h6v-4c0 -0.63 0.15 -1.96 -0.5 -2.5c1.39 -0.13 2.48 -0.58 3.5 -1.5c1.02 -0.92 1.5 -2.31 1.5 -4.5c0 -1.5 -0.25 -2.5 -1 -3.5c0.29 -0.78 0.34 -2 0 -3c-1.56 0 -2.97 1.07 -3.5 1.5Z">
            <animate
              fill="freeze"
              attributeName="fill-opacity"
              begin="0.9s"
              dur="0.15s"
              to="0.3"></animate></path>
            <g fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2">
            <path
              stroke-dasharray="32"
              d="M12 4c1.67 0 2.61 0.4 3 0.5c0.53 -0.43 1.94 -1.5 3.5 -1.5c0.34 1 0.29 2.22 0 3c0.75 1 1 2 1 3.5c0 2.19 -0.48 3.58 -1.5 4.5c-1.02 0.92 -2.11 1.37 -3.5 1.5c0.65 0.54 0.5 1.87 0.5 2.5c0 0.73 0 3 0 3M12 4c-1.67 0 -2.61 0.4 -3 0.5c-0.53 -0.43 -1.94 -1.5 -3.5 -1.5c-0.34 1 -0.29 2.22 0 3c-0.75 1 -1 2 -1 3.5c0 2.19 0.48 3.58 1.5 4.5c1.02 0.92 2.11 1.37 3.5 1.5c-0.65 0.54 -0.5 1.87 -0.5 2.5c0 0.73 0 3 0 3">
              <animate
                fill="freeze"
                attributeName="stroke-dashoffset"
                dur="0.6s"
                values="32;0"></animate></path>
            <path
              stroke-dasharray="10"
              stroke-dashoffset="10"
              d="M9 19c-1.41 0 -2.84 -0.56 -3.69 -1.19c-0.84 -0.63 -1.09 -1.66 -2.31 -2.31"
              ><animate
                fill="freeze"
                attributeName="stroke-dashoffset"
                begin="0.7s"
                dur="0.2s"
                to="0"></animate></path
            >
          </g>
        </svg>
      </a>
      <a href="https://linkedin.com/quinnyahuang" target="_blank">
        <span class="sr-only">Go to Quinn Huang's LinkedIn page</span>
        <svg
          id="linkedin-icon"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          viewBox="0 0 24 24"
          >Icon from Garden SVG Icons by Zendesk -
          https://github.com/zendeskgarden/svg-icons/blob/main/LICENSE.md<path
            fill="currentColor"
            d="M15 0a1 1 0 0 1 .993.883L16 1v14a1 1 0 0 1-.883.993L15 16H1a1 1 0 0 1-.993-.883L0 15V1A1 1 0 0 1 .883.007L1 0zm0 1H1v14h14zm-4.56 5.082c2.032 0 2.462 1.292 2.488 3.004v3.843h-2.074V9.464c-.01-.731-.11-1.556-1.079-1.556c-1.029 0-1.227.766-1.244 1.592l-.001 3.429H6.455v-6.68h1.992v.912h.028a2.18 2.18 0 0 1 1.964-1.079zm-5.288.166v6.68H3.075v-6.68zm-1.038-3.32a1.204 1.204 0 1 1 0 2.407a1.204 1.204 0 0 1 0-2.408z"
          ></path></svg
        >
      </a>
    </div>
    <!-- <ThemeIcon /> -->
  </nav>
</header>
<style>

  header {
	  margin: 0 auto;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  h2 {
    margin: 0;
    font-size: em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    /* border-bottom-color: var(--accent); */
  }

  .social-links-container,
  .social-links-container a {
    display: flex;
    align-items: center;
  }

  #linkedin-icon {
    transform: translateY(5px);
  }


